<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android" >

    <!-- 阴影部分 -->
    <!-- 个人觉得更形象的表达：top代表下边的阴影高度，left代表右边的阴影宽度。其实也就是相对应的offset，solid中的颜色是阴影的颜色，也可以设置角度等等 -->
    <item
        android:left="4dp"
        android:top="5dp"

        android:bottom="3dp"
        android:right="4dp">
        <shape android:shape="oval" >

            <gradient
                android:angle="270"
                android:endColor="#30000000"
                android:startColor="#30000000" />


        </shape>
    </item>
    <item
        android:left="4dp"
        android:top="6dp"

        android:bottom="2dp"
        android:right="4dp">
        <shape android:shape="oval" >

            <gradient
                android:angle="270"
                android:endColor="#30000000"
                android:startColor="#30000000" />


        </shape>
    </item>
    <item
        android:left="4dp"
        android:top="7dp"

        android:bottom="1dp"
        android:right="4dp">
        <shape android:shape="oval" >

            <gradient
                android:angle="270"
                android:endColor="#30000000"
                android:startColor="#30000000" />


        </shape>
    </item>
    <item
        android:left="4dp"
        android:top="8dp"

        android:bottom="0dp"
        android:right="4dp">
        <shape android:shape="oval" >

            <gradient
                android:angle="270"
                android:endColor="#30000000"
                android:startColor="#30000000" />


        </shape>
    </item>

    <!-- 背景部分 -->
    <!-- 形象的表达：bottom代表背景部分在上边缘超出阴影的高度，right代表背景部分在左边超出阴影的宽度（相对应的offset） -->
    <item
        android:left="4dp"
        android:top="4dp"

        android:bottom="4dp"
        android:right="4dp">
        <shape android:shape="oval" >

            <gradient
                android:angle="270"
                android:endColor="#46FBD1"
                android:startColor="#46FBD1" />


        </shape>
    </item>

</layer-list>