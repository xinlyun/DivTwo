<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@raw/bg_add_list"
    tools:context="com.xiaopeng.musicplayer.activity.AddListActivity">

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/et_addlist_name"
        android:background="@drawable/selector_et_listname"
        android:layout_centerInParent="true"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"/>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_above="@id/et_addlist_name"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="30dp"
        android:layout_marginEnd="20dp">

        <ImageButton
            android:layout_width="115dp"
            android:layout_height="48dp"
            android:id="@+id/ib_addlist_cancel"
            android:background="@drawable/selector_bt_cancel"/>

        <ImageButton
            android:layout_width="115dp"
            android:layout_height="48dp"
            android:id="@+id/ib_addlist_ok"
            android:background="@drawable/selector_bt_ok"/>
    </LinearLayout>

</RelativeLayout>
