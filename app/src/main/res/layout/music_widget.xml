<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent"
    android:padding="@dimen/widget_margin"

    >


    <ImageView
        android:id="@+id/widget_backage"

        android:layout_marginTop="70dp"
        android:scaleType="centerCrop"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />
    <ImageView
        android:background="#25000000"
        android:layout_width="match_parent"
        android:layout_marginTop="80dp"
        android:layout_height="match_parent" />
    <ImageView
        android:background="@drawable/titlebackgroup"
        android:elevation="4dp"
        android:layout_width="match_parent"
        android:layout_height="80dp" />
    <TextView
        android:id="@+id/widget_textview"
        android:textColor="@color/white"
        android:gravity="center_horizontal|center_vertical"
        android:layout_marginTop="126dp"
        android:text="小鹏汽车"
        android:textSize="30dp"
        android:layout_width="match_parent"
        android:layout_height="55dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true" />
    <LinearLayout
        android:layout_centerHorizontal="true"
        android:layout_centerInParent="true"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="80dp"

        android:layout_width="match_parent"
        android:layout_height="wrap_content">


        <ImageButton
            android:layout_width="87dp"
            android:layout_height="87dp"
            android:layout_marginLeft="40dp"
            android:id="@+id/widget_ib_prev"
            android:background="@drawable/selector_bt_prev"
            android:layout_weight="1"
            android:layout_gravity="center_vertical|center_horizontal"/>

        <FrameLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="2"
            android:layout_gravity="center_vertical|center_horizontal">

            <ImageButton
                android:layout_width="127dp"
                android:layout_height="127dp"
                android:id="@+id/widget_ib_play"
                android:layout_gravity="center_vertical|center_horizontal"
                android:background="@drawable/selector_bt_play"/>

            <ImageButton
                android:layout_width="127dp"
                android:layout_height="127dp"
                android:layout_gravity="center_vertical|center_horizontal"
                android:id="@+id/widget_ib_pause"
                android:visibility="gone"
                android:background="@drawable/selector_bt_pause"/>

        </FrameLayout>

        <ImageButton
            android:layout_width="87dp"
            android:layout_height="87dp"
            android:layout_weight="1"
            android:id="@+id/widget_ib_next"
            android:layout_marginRight="40dp"
            android:background="@drawable/selector_bt_next"
            android:layout_gravity="center_vertical|center_horizontal"/>

    </LinearLayout>
    <ImageView
        android:layout_marginTop="40dp"
        android:elevation="4dp"
        android:layout_alignParentRight="true"
        android:layout_marginRight="50dp"
        android:id="@+id/widget_float_image"
        android:background="@drawable/floatflag"
        android:layout_width="85dp"
        android:layout_height="85dp" />
</RelativeLayout>